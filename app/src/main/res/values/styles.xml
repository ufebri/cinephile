<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CinephileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CinephileTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CinephileTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

</resources>
